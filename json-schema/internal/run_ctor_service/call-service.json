{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "rpc_calls": {
        "call_service": {
            "description": "Call service for construct contract code",

            "input": {
                "type": "object",
                "required": ["method", "args"],
                "additionalProperties": false,
                "properties": {
                    "method": {
                        "type": "string",
                        "enum": [
                            "construct",
                            "get_params",
                            "post_construct"
                        ]
                    },
                    "args": {
                        "type": "array"
                    }
                }
            }
        }
    }
}
